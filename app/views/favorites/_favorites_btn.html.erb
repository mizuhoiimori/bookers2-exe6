<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
  <i class="fas fa-heart" style="color:red;"></i>
  <span id="fav-red"><%= book.favorites.count %></span>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, remote: true do %>
  <i class="far fa-heart color:blue;"></i>
  <span id="fav-blue"><%= book.favorites.count %></span>
  <% end %>
<% end %>